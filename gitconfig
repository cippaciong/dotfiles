[alias]
    logtree = log --graph --all --oneline
    logdiff = log -p -n
    cleanbranch = remote update origin --prune
    logline = log --oneline

[commit]
    template = ~/.gitmessage

[core]
    pager = delta
    editor = nvim
    excludesfile = ~/.gitignore

[diff]
    tool = vimdiff

